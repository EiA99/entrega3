{{>headerCoordinador}}

<br>
<p>Ingrese los datos del curso en el siguiente formulario</p>
<form action="/crearcursos" , method="post">
  <div class="form-group">
    <div class="row">
      <div class="col">
        <label>ID del curso</label>
        <input type="number" class="form-control" name="id" placeholder="ID curso" required>
      </div>
      <div class="col">
        <label>Nombre Completo</label>
        <input type="text" class="form-control" name="nombre" placeholder="Nombre de curso" required>
      </div>
      <div class="col">
        <label>Valor</label>
        <input type="number" class="form-control" name="valor" placeholder="Valor curso" required>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col">
        <label>Descripción</label>
        <textarea class="form-control" name="descripcion" placeholder="Descripción del curso" required></textarea>
      </div>
      <div class="col">
        <label>Modalidad</label>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="modalidad" id="virtual" value="1" checked>
          <label class="form-check-label" for="virtual">
            Virtual
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="modalidad" id="presencial" value="2">
          <label class="form-check-label" for="presencial">
            Presencial
          </label>
        </div>
      </div>
      <div class="col">
        <label>Intensidad horaria</label>
        <input type="number" class="form-control" name="horas" placeholder="Horas del curso">
      </div>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Crear curso</button>
    <br>
</form>
<br>
<div class="alert alert-info" role="alert">
  {{message}}
</div>
<br>
{{>footer}}